{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES5",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "skipLibCheck": true,
    /* Linting */
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true
  },
  "include": ["source/"],
  "exclude": ["build/", "node_modules/"]
}
